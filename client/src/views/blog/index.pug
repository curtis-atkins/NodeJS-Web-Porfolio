extends ../layouts/main.pug

block title
  title Blogs | Curtis Atkins Portfolio

block content
  div(class="container blog-page index-page")
      div(class="row")
        div(class="col-md-8")

          each post in posts
            div(class="content-box")
              div(class="row")
                div(class="col-md-12")
                  a(href="/blog/title")
                    h1 = post.title
                    p= post.description

          div(class="col-md-4")
            div(class="content-box")
                include ../includes/side-ad.pug
